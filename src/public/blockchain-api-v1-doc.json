{
  "openapi": "3.0.0",
  "info": {
    "title": "BlockchainJS API",
    "version": "1.0",
    "description": "An API to manage the decentralized Blockchain network.",
    "contact": {
      "name": "Christopher Ortiz Montero",
      "url": "https://github.com/christophermontero",
      "email": "cgortizm21@gmail.com"
    },
    "termsOfService": "http://swagger.io/terms",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "development"
    }
  ],
  "paths": {
    "/api/v1/blockchain": {
      "get": {
        "summary": "Get Blockchain",
        "tags": [],
        "operationId": "get-blockchain",
        "description": "Get the entire Blockchain.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Blockchain"
                    }
                  ]
                },
                "examples": {
                  "blockhain-object": {
                    "$ref": "#/components/examples/blockchain"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/transaction": {
      "post": {
        "summary": "Create transaction",
        "operationId": "post-transaction",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "x-examples": {
                    "example-1": {
                      "note": "Transaction will be added in block 2"
                    }
                  },
                  "properties": {
                    "note": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "create-transaction": {
                    "value": {
                      "note": "Transaction will be added in block 2"
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Create a new transaction into the Blockchain.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              },
              "examples": {
                "transaction-body": {
                  "$ref": "#/components/examples/transaction"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Blockchain": {
        "title": "Blockchain",
        "description": "",
        "x-examples": {},
        "type": "object",
        "properties": {
          "chain": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Chain"
            }
          },
          "pendingTransactions": {
            "type": "array",
            "description": "The pending transactions go here.",
            "items": {
              "$ref": "#/components/schemas/Transaction"
            }
          }
        }
      },
      "Chain": {
        "description": "",
        "type": "object",
        "x-examples": {},
        "properties": {
          "index": {
            "type": "number"
          },
          "timestamp": {
            "type": "number"
          },
          "transactions": {
            "type": "array",
            "description": "When transactions are added to the Block, go here.",
            "items": {
              "$ref": "#/components/schemas/Transaction"
            }
          },
          "nonce": {
            "type": "number"
          },
          "hash": {
            "type": "string",
            "minLength": 1
          },
          "prevBlockHash": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "Transaction": {
        "description": "",
        "type": "object",
        "x-examples": {},
        "properties": {
          "amount": {
            "type": "number"
          },
          "sender": {
            "type": "string",
            "minLength": 1,
            "description": "Sender address."
          },
          "recipient": {
            "type": "string",
            "minLength": 1,
            "description": "Recipient address"
          }
        }
      }
    },
    "responses": {},
    "examples": {
      "blockchain": {
        "value": {
          "chain": [
            {
              "index": 1,
              "timestamp": 1641415753879,
              "transactions": [],
              "nonce": 0,
              "hash": "0",
              "prevBlockHash": "0"
            }
          ],
          "pendingTransactions": [
            {
              "amount": 20,
              "sender": "sender address",
              "recipient": "recipient address"
            }
          ]
        }
      },
      "transaction": {
        "value": {
          "amount": 20,
          "sender": "sender address",
          "recipient": "recipient address"
        }
      }
    },
    "requestBodies": {}
  }
}